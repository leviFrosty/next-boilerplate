    "pretty-quick": "4.2.2",
    "turbo": "2.5.8",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "parse5": "7.1.2"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "lefthook",
      "sharp",
      "unrs-resolver",
      "@parcel/watcher",
      "core-js-pure"
    ],
    "ignoredBuiltDependencies": []
  },
  "engines": {
    "node": ">=18"
  }
